{
  "name": "discord-bot-template",
  "version": "1.0.0",
  "description": "Discord bot created from a TypeScript template",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node .",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "deploy": "cross-env IS_SCRIPT=true ts-node src/scripts/deploy",
    "deploy:prod": "cross-env NODE_ENV=production npm run deploy",
    "clear": "cross-env IS_SCRIPT=true ts-node src/scripts/clear",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.8",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1"
  }
}
